<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">
    <ImageButton
        android:id="@+id/Homebutton_signac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="숙명 스터디카페"
        android:textSize="40dp"
        android:textColor="#000000"
        android:layout_marginTop="50dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SIGN UP"
        android:textSize="40dp"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:paddingBottom="30dp"
        app:srcCompat="@drawable/noonsong" />




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textID"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="EMAIL:"
            android:textColor="@color/black"
            android:gravity="right"            />
        <EditText
            android:id="@+id/editID"

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="email"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:ems="10"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_gravity="center">


        <TextView
            android:gravity="right"
            android:id="@+id/textPW"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="PASSWORD:" />
        <EditText
            android:id="@+id/editPW"

            android:ems="10"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:hint="6자리 이상 입력하세요."
            android:textColorHint="@color/black"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_gravity="center">


        <TextView
            android:gravity="right"
            android:id="@+id/checkPW"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="PASSWORD CHECK:" />

        <EditText
            android:id="@+id/editCheckPW"

            android:ems="10"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:hint="비밀번호 재확인"
            android:textColorHint="@color/black"

            />
    </LinearLayout>



    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/buttonsignup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#969696"
        android:textColor="@color/white"
        android:background="@drawable/radius"
        android:layout_marginBottom="10dp"
        android:text="SIGN UP" />


</LinearLayout>