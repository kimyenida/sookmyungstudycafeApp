            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn30"
                android:backgroundTint="#969696"
                android:layout_column="5" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn31"
                android:backgroundTint="#969696" />

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn32"
                android:backgroundTint="#969696"
                android:layout_column="2" />

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn33"
                android:backgroundTint="#969696" />

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn34"
                android:backgroundTint="#969696"
                android:layout_column="5" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/selectTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        >

        <TextView
            android:id="@+id/selectSeat"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView2"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사용할 시간을 선택하세요" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1시간" />

            <Button
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2시간" />

            <Button
                android:id="@+id/time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4시간" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/time4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8시간"/>

            <Button
                android:id="@+id/time5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50시간"/>
            <Button
                android:id="@+id/time6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100시간"/>

        </LinearLayout>

        <TextView
            android:id="@+id/costText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#000"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/backBtn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#4646CD"
                android:text="돌아가기"/>

            <Button
                android:id="@+id/reservationBtn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#4646CD"
                android:text="예약하기" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>