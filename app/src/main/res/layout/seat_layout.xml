<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    android:id="@+id/seatLayout">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/Homebutton_seatac"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/button2"/>

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn1"
                android:backgroundTint="#969696"
                android:layout_column="1" />

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn2"
                android:backgroundTint="#969696"
                />

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn3"
                android:backgroundTint="#969696" />

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn4"
                android:backgroundTint="#969696" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn5"
                android:backgroundTint="#969696" />

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn6"
                android:backgroundTint="#969696"
                android:layout_column="5" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn7"
                android:backgroundTint="#969696" />

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn8"
                android:backgroundTint="#969696"
                android:layout_column="2"/>

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn9"
                android:backgroundTint="#969696" />

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn10"
                android:backgroundTint="#969696"
                android:layout_column="5" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn11"
                android:backgroundTint="#969696" />

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn12"
                android:backgroundTint="#969696"
                android:layout_column="2" />

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn13"
                android:backgroundTint="#969696" />

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn14"
                android:backgroundTint="#969696"
                android:layout_column="5" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn15"
                android:backgroundTint="#969696" />

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn16"
                android:backgroundTint="#969696"
                android:layout_column="2" />

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn17"
                android:backgroundTint="#969696" />

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn18"
                android:backgroundTint="#969696"
                android:layout_column="5" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
