                android:id="@+id/seatBtn22"
                android:backgroundTint="#969696"
                android:layout_column="5" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn23"
                android:backgroundTint="#969696" />

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn24"
                android:backgroundTint="#969696"
                android:layout_column="2" />

            <Button
                style="@style/seatBtn"
                android:id="@+id/seatBtn25"
                android:backgroundTint="#969696" />

